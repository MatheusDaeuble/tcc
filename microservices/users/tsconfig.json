{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "src",
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@database/*": ["database/*"],
      "@config/*":[ "config/*"],
      "@routes/*": ["routes/*"],
      "@utils/*":[ "utils/*"],
      "@jobs/*":[ "jobs/*"],
      "~/*": ["./*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
